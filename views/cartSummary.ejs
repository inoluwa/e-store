<%- include ('./partial/header') %> 
<div class="container pt-5">
  <% if (display.length!=0) { %>
<div class="row justify-content-center">
    <div class="col-md-7">
   <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Product Details</th>
          <th scope="col">Quantity</th>
          <th scope="col">Product Price</th>
          <th scope="col">Total</th>
        </tr>
      </thead>
      <tbody>
        <% for( let i= 0; i < display.length; i++ ) { %>
        
          <tr>
            <td><%=display[i].name %> </td>
            <td><span class="d-flex">  <button class="btn btn-sm mx-2 btn-outline-success "><i class="fa fa-minus"></i></button> <%= display[i].qty %> <button class="btn btn-sm mx-2 btn-outline-success"><i class="fa fa-plus"></i></button> </span></td>
            <td><%= formatter.format(display[i].price)%> </td>
            <td><%= formatter.format(display[i].totalPrice)%> </td>

          </tr>
        <% } %> 
    </table>
   </div>
       

      
        
    </div>
    <div class="col-md-5 justify-content-end  mt-4">
      <div class="  "> 
   

          <article class="card"><h1 class="fs-5 text-center  card-header">CART SUMMARY</h1>
            <div class="card-body"><p class="fs-6 text-center">Subtotal</p>
              <p class="fs-6 text-center "> <%= formatter.format(totalAmount) %></p></div><div class="text-center">
                <% if (totalAmount != 0) { %>
                <a href="/checkout" class="btn btn-primary fs-6 text-center m-3">Checkout (<%= formatter.format(totalAmount) %>)</a>
                <% } %>
              </div>
            </article>

       </div>
    </div>
  
</div>
<% } else {%>
<div class="row justify-content-center">
<div class="col-md-8 card">
<div class="card-body ">
  <div class="text-center"><span class="fa text-warning fa-shopping-cart fa-3x"  alt=""></span><h2 class="text-center text-md">Your cart is empty!</h2><p class="text-center text-sm">Browse our categories and discover our best deals!</p>
    <a href="/" class="btn btn-warning text-center">Start Shopping</a></div>
</div>
</div>

</div>


  <% } %>

</div>
