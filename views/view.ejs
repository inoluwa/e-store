<%- include ('./partial/header') %> 

<div id="container">
    <div class="row justify-content-center">
<div class="img"></div>
<div class="card shadow-sm">
    <img src="/uploads/<%=product[index].productImage%>" alt="" srcset=""  class="bd-placeholder-img card-img-top" width="100%" height="225">
     <div class="card-body">
       <p class="card-text"><%= product[index].productName %></p>        
             <div class="d-flex justify-content-between align-items-center">
         <div class="btn-group">
           <a  class="btn btn-sm btn-outline-secondary"  href="/views/<%=product[index].id%>">View</a>
    <form action="/?pageNo=<%=(pageNo) %>&&searchTerm=<%=search%>" method="post"  >
<input type="hidden" name="product_id" value="<%=product[index].id%>">
     <button type="submit" class="btn btn-sm btn-outline-warning"  id="cartBtn" data-identity="<%=product[index].id%>" >ADD Cart</button>

    </form>
            
           </div>
         <small class="text-muted"><%= formatter.format(product[index].productPrice) %> </small>
       </div>
     </div>
   </div>
<div>product details</div>
</div>
</div>
