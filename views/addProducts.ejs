<%- include ('./partial/header')  %> 
<div class="container mt-5">
  
    <div class="row justify-content-center">
        <div class="col-md-6">
<form action="/addProducts" method="post" enctype="multipart/form-data">
    <div class="mb-3">


        <label for="productName" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="productName" name="productName" placeholder="Product name">
      </div>

    <div class="mb-3">
        <label for="productPrice" class="form-label">Product Price</label>
        <input type="number" class="form-control" id="productPrice" name="productPrice" placeholder="Product price">
      </div>
    <div class="mb-3">
        <label for="categoryType" class="form-label">Category Type</label>
        <select class="form-select" aria-label="Default select example" name="categoryType" id="categoryType">
            <option value="" selected>Category Type</option>
            <% for( let index = 0; index < categories.length; index++ ) { %>
                <option value="<%= categories[index].id %>"> 

                    <%= categories[index].Name %> 
                </option>
            <% } %>
          
          </select>      
        </div>
    <div class="mb-3">
        <label for="noInStock" class="form-label">Number in stock</label>
        <input type="number" class="form-control" id="noInStock" name="noInStock" placeholder="Number in stock">
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload product image</label>
        <input type="file" class="form-control" id="image" name="image"  accept="image/*">
      </div>
    
      
      <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Add Product</button>
   
    </div>
    
</div>
</form>
        </div>
        </div>